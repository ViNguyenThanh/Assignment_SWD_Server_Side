<div class="header-container">
    <div class="logo">
        <a href="/"><img src="/assets/logo.png"></a>
    </div>
    <div class="user">
        <% if (typeof memberName !=='undefined' ) { %>
            <div class="dropdown">
                <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    <img src="/assets/avatar.jpg"/>
                </button>
                <p>
                    <%= memberName %>
                </p>
                <ul class="dropdown-menu">
                    <!-- <li><a class="dropdown-item" href="/member/<%= memberId %>">Personal Infomation </a></li> -->
                    <li><a class="dropdown-item" href="/member-info/<%= memberId %>">Personal Infomation </a></li>
                    <% if (isAdmin) { %>
                        <li><a class="dropdown-item" href="/brands">Admin Dashboard</a></li>
                    <% } %>
                    <li><a class="dropdown-item" href="/logout">Log out</a></li>
                </ul>
            </div>

            
            <% } else { %>
                <a href="/login">Login</a> <br>
                <br>
                <a href="/register">Register</a> <br>
                <br>
            <% } %>
    </div>
</div>