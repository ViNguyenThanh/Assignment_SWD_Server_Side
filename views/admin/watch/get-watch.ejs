<div class="get_watch-container">
    <div class="get_watch-btn">
        <a href="/create-watch" role="button">Create watch </a>
    </div>
    <table class="get_watch-table">
        <tr>
            <th class="get_watch-th">No</th>
            <th class="get_watch-th">Watch's name</th>
            <th class="get_watch-th">Image</th>
            <th class="get_watch-th">Price</th>
            <th class="get_watch-th">Automatic</th>
            <th class="get_watch-th">Description</th>
            <th class="get_watch-th">Brand</th>
            <th class="get_watch-th">Action</th>
        </tr>
        <% watches.map((watch, index)=> {%>
            <tr>
                <td class="get_watch-td">
                    <%= index + 1 %>
                </td>
                <td class="get_watch-td">
                    <%= watch.watchName%>
                </td>
                <td class="get_watch-td">
                    <img src="assets/watch/<%= watch.image%>" id="file-uploader" accept=".jpg, .jpeg, .png">
                </td>
                <td class="get_watch-td">
                    <%= watch.price%> VND
                </td>
                <td class="get_watch-td">
                    <%= watch.automatic%>
                </td>
                <td class="get_watch-td">
                    <%= watch.watchDescription%>
                </td>
                <td class="get_watch-td">
                    <% brands.forEach((brand) => {
                        if(String(brand._id) === String(watch.brand)){
                        %>
                            <%= brand.brandName%>
                        <%
                        }
                    }) %>
                </td>
                <td class="get_watch-td">
                    <a href="/delete-watch/<%= watch._id%>" role="button">
                        <img src="/assets/trash.png" />
                        <!-- ❌ -->
                    </a>
                    <a href="/edit-watch/<%= watch._id%>" role="button">
                        <img src="/assets/edit.png" />
                        <!-- 📝 -->
                    </a>
                </td>
            </tr>
            <%}) %>
    </table>
</div>
