<div class="get_brand-container">
    <div id="error-message" class="alert alert-danger" role="alert" style="display: none;">
        <%= errorMessage %>
    </div>
    <div class="get_brand-btn">
        <a href="/create-brand" role="button">Create brand </a>
    </div>
    <table class="get_brand-table">
        <tr>
            <th class="get_brand-th">No</th>
            <th class="get_brand-th">Brand's name</th>
            <th class="get_brand-th">Action</th>
        </tr>
        <% brands.map((brand, index)=> {%>
            <tr>
                <td class="get_brand-td">
                    <%= index + 1 %>
                </td>
                <td class="get_brand-td">
                    <%= brand.brandName%>
                </td>
                <td class="get_brand-td">
                    <a href="/delete-brand/<%= brand._id%>" role="button">
                        <img src="/assets/trash.png" />
                        <!-- ❌ -->
                    </a>
                    <a href="/edit-brand/<%= brand._id%>" role="button">
                        <img src="/assets/edit.png" />
                        <!-- 📝 -->
                    </a>
                </td>
            </tr>
            <%}) %>
    </table>
</div>


